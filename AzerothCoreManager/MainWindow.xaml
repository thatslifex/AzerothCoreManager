<Window
    x:Class="AzerothCoreManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AzerothCoreManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AzerothCoreManager"
    Width="800"
    Height="600"
    MinHeight="600"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  Colors for server state  -->
        <SolidColorBrush x:Key="OnlineBrush" Color="#FF4CAF50" />
        <SolidColorBrush x:Key="OfflineBrush" Color="#FFF44336" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Dashboard Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="System Dashboard" />
        <!--  Server Metrics  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Auth Server Panel  -->
            <Border
                x:Name="AuthBorder"
                Grid.Column="0"
                Margin="10"
                Padding="10"
                Background="#FFEEEEEE"
                BorderBrush="{StaticResource OfflineBrush}"
                BorderThickness="3"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--  Panel Title  -->
                    <TextBlock
                        Grid.Row="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Auth Server" />
                    <!--  CPU / RAM Informations  -->
                    <Grid Grid.Row="1">
                        <StackPanel>
                            <TextBlock Margin="10" Text="CPU" />
                            <ProgressBar
                                x:Name="AuthCPUBar"
                                Height="20"
                                Margin="10,0,0,0" />
                            <TextBlock Margin="10" Text="RAM" />
                            <ProgressBar
                                x:Name="AuthRAMBar"
                                Height="20"
                                Margin="10,0,0,0" />
                        </StackPanel>
                    </Grid>
                    <!--  Start/Stop Buttons  -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Name="AuthStartButton"
                            Grid.Column="0"
                            Margin="10"
                            Click="AuthStartButton_Click"
                            Content="Start" />
                        <Button
                            Name="AuthStopButton"
                            Grid.Column="1"
                            Margin="10"
                            Click="AuthStopButton_Click"
                            Content="Stop" />
                    </Grid>
                </Grid>
            </Border>
            <!--  World Server Panel  -->
            <Border
                x:Name="WorldBorder"
                Grid.Column="1"
                Margin="10"
                Padding="10"
                Background="#FFEEEEEE"
                BorderBrush="{StaticResource OfflineBrush}"
                BorderThickness="3"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--  Panel Title  -->
                    <TextBlock
                        Grid.Row="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="World Server" />
                    <!--  CPU / RAM Informations  -->
                    <Grid Grid.Row="1">
                        <StackPanel>
                            <TextBlock Margin="10" Text="CPU" />
                            <ProgressBar
                                x:Name="WorldCPUBar"
                                Height="20"
                                Margin="10,0,0,0" />
                            <TextBlock Margin="10" Text="RAM" />
                            <ProgressBar
                                x:Name="WorldRAMBar"
                                Height="20"
                                Margin="10,0,0,0" />
                        </StackPanel>
                    </Grid>
                    <!--  Start/Stop Buttons  -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Name="WorldStartButton"
                            Grid.Column="0"
                            Margin="10"
                            Click="WorldStartButton_Click"
                            Content="Start" />
                        <Button
                            Name="WorldStopButton"
                            Grid.Column="1"
                            Margin="10"
                            Click="WorldStopButton_Click"
                            Content="Stop" />
                    </Grid>
                </Grid>
            </Border>
            <!--  SQL Server Panel  -->
            <Border
                x:Name="SQLBorder"
                Grid.Column="2"
                Margin="10"
                Padding="10"
                Background="#FFEEEEEE"
                BorderBrush="{StaticResource OfflineBrush}"
                BorderThickness="3"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--  Panel Title  -->
                    <TextBlock
                        Grid.Row="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="SQL Server" />
                    <!--  CPU / RAM Informations  -->
                    <Grid Grid.Row="1">
                        <StackPanel>
                            <TextBlock Margin="10" Text="CPU" />
                            <ProgressBar
                                x:Name="SQLCPUBar"
                                Height="20"
                                Margin="10,0,0,0" />
                            <TextBlock Margin="10" Text="RAM" />
                            <ProgressBar
                                x:Name="SQLRAMBar"
                                Height="20"
                                Margin="10,0,0,0" />
                        </StackPanel>
                    </Grid>
                    <!--  Start/Stop Buttons  -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Name="SQLStartButton"
                            Grid.Column="0"
                            Margin="10"
                            Click="SQLStartButton_Click"
                            Content="Start" />
                        <Button
                            Name="SQLStopButton"
                            Grid.Column="1"
                            Margin="10"
                            Click="SQLStopButton_Click"
                            Content="Stop" />
                        <Button
                            Name="SQLRestartButton"
                            Grid.Column="2"
                            Margin="10"
                            Click="SQLRestartButton_Click"
                            Content="Restart" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <!--  Server Consoles / Logs  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Left console  -->
            <Border
                Grid.Column="0"
                Margin="8"
                Padding="6"
                Background="#FF1E1E1E"
                CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="4"
                        DockPanel.Dock="Top"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Auth Server Console" />
                    <TextBox
                        x:Name="AuthConsoleTextBox"
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AcceptsReturn="True"
                        Background="#FF1E1E1E"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="12"
                        Foreground="LightGray"
                        HorizontalScrollBarVisibility="Disabled"
                        IsReadOnly="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </Grid>
            </Border>

            <!--  Right console  -->
            <Border
                Grid.Column="1"
                Margin="8"
                Padding="6"
                Background="#FF1E1E1E"
                CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="4"
                        DockPanel.Dock="Top"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="World Server Console" />
                    <TextBox
                        x:Name="WorldConsoleTextBox"
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AcceptsReturn="True"
                        Background="#FF1E1E1E"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="12"
                        Foreground="LightGray"
                        HorizontalScrollBarVisibility="Disabled"
                        IsReadOnly="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </Grid>
            </Border>
        </Grid>
        <!--  Settings Button  -->
        <Button
            x:Name="SettingsButton"
            Grid.Row="3"
            Width="Auto"
            Margin="10"
            Click="SettingsButton_Click"
            Content="Set Path to Auth- and Worldserver Binaries" />
    </Grid>
</Window>
